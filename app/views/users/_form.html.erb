<%= form_for(@user, url: yield(:path)) do |f|%>


    <div class="form-group">
        <%= f.email_field :email, class: 'form-control', placeholder: "Your email"  %>
    </div>

    <div class="form-group">
        <%= f.password_field :password, class: 'form-control', placeholder: "Password" %>
    </div>

    <div class="form-group">
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Password confirmation" %>
    </div>

    <%= f.submit "Submit", class: 'btn btn-primary btn-lg btn-block' %>
<% end %>

