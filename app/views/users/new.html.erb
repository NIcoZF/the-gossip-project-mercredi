<html>
  <body>


  <div class="card border-info m-5">
   <div class="card-header">
    <h1>Créer son compte</h1>
    </div>

      <% if flash[:error] %>
      <div class="alert alert-danger role="alert"><%= flash[:error] %>
      </div>
      <% end %>


      <%= form_tag url_for(action: 'create'), method: "post" do %>

      <div class="card-body text-info">
        <div class="form-group">
        <%= label_tag 'Prénom' %>
        <%= text_field_tag 'first_name', @user.first_name, class:'form-control', placeholder:"Prénom"  %>
        <br /> <br />

        <%= label_tag 'Nom' %>
        <%= text_field_tag 'last_name', @user.last_name, class:'form-control', placeholder:"Nom"  %>
        <br /> <br />

        <%= label_tag 'Description' %>
        <%= text_field_tag 'description', @user.description, class:'form-control', placeholder:"Description"  %>
        <br /> <br />

        <%= label_tag 'Age' %>
        <%= text_field_tag 'age', @user.age, class:'form-control', placeholder:"Age"  %>
        <br /> <br />

        <%= label_tag 'email' %>
        <%= text_field_tag 'email', @user.email, class:'form-control', placeholder:"Email"  %>
        <br /> <br />

        <%= label_tag 'Mot de passe' %>
        <%= password_field_tag 'password', @user.password, class:'form-control', placeholder:"Mot de passe"  %>
        <br /> <br />

        <%= submit_tag "M'inscrire", class: "btn btn-outline-info btn-lg" %></br></br>
        </div>
      </div>
      <% end %>
  </div>
  </body>
</html>
